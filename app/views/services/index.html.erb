<p id="notice"><%= notice %></p>

<h1>Services</h1>

<table>
  <thead>
    <tr>
      <th> Service Name</th>
      <!--<th>First name</th>
      <th>Last name</th>-->
      <th>Description</th>
      <th>Type</th>
      <th>Phone</th>
      <th>Url</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.description %></td>
        <td><%= service.kind %></td>
        <td><%= service.phone_number %></td>
        <td><%= service.url %></td>
        <td><%= service.picture %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

